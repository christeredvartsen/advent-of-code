{
  "name": "christeredvartsen/advent-of-code",
  "type": "library",
  "description": "Advent of Code solutions",
  "homepage": "https://github.com/christeredvartsen/advent-of-code",
  "license": "MIT",
  "authors": [
    {
      "name": "Christer Edvartsen",
      "email": "cogo@starzinger.net",
      "homepage": "https://github.com/christeredvartsen"
    }
  ],
  "require": {
    "php": ">=8.4",
    "symfony/console": "^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "imbo/imbo-coding-standard": "^2.0",
    "phpunit/phpunit": "^12.4",
    "symfony/var-dumper": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "AoC\\": "src"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AoC\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-html build/coverage",
    "cs": "vendor/bin/php-cs-fixer check --diff --using-cache=no",
    "ci": [
      "@test",
      "@cs"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "bin": [
    "aoc"
  ]
}
